
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all collections for any authenticated user.
    // WARNING: For production, you should implement more granular rules
    // to restrict access based on user roles (e.g., admin, homeowner, shop-owner).
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
