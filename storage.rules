rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow logged-in users to upload to their own folders within these paths.
    // This covers profiles, requirements, and updates.
    // Anyone can read images, as the URLs are unguessable.
    match /{path=**}/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
  }
}
